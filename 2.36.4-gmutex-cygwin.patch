     pthread_mutexattr_settype (&attr, PTHREAD_MUTEX_ADAPTIVE_NP);
-    pattr = &attr;
-  }
+#else
+    pthread_mutexattr_settype (&attr, PTHREAD_MUTEX_DEFAULT);
 #endif
 
-  if G_UNLIKELY ((status = pthread_mutex_init (mutex, pattr)) != 0)
