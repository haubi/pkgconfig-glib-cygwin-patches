+  static pthread_mutexattr_t attr = NULL;
   pthread_mutex_t *mutex;
   gint status;
 
@@ -89,21 +89,18 @@ g_mutex_impl_new (void)
   if G_UNLIKELY (mutex == NULL)
     g_thread_abort (errno, "malloc");
 
